<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fulton.reid.grocerygoblin.MainActivity">

    <TextView
        android:id="@+id/Final2"
        android:layout_width="62dp"
        android:layout_height="28dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="42dp"
        android:textSize="24sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Final1"
        app:layout_constraintLeft_toRightOf="@+id/priceTxt2"
        android:layout_marginLeft="8dp" />

    <EditText

        android:id="@+id/Pricetxt1"
        android:layout_width="64dp"
        android:layout_height="45dp"

        android:ems="10"
        android:hint="Price"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toRightOf="@+id/qtyItem1"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText

        android:id="@+id/priceTxt2"
        android:layout_width="64dp"
        android:layout_height="45dp"

        android:ems="10"
        android:hint="Price"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toRightOf="@+id/qtyItem2"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/Pricetxt1" />

    <EditText

        android:id="@+id/qtyItem2"
        android:layout_width="64dp"
        android:layout_height="45dp"

        android:layout_marginLeft="23dp"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:hint="Value"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/qtyItem1" />

    <EditText

        android:id="@+id/qtyItem1"
        android:layout_width="64dp"
        android:layout_height="45dp"

        android:layout_marginLeft="23dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Value"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/unitTxt1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="55dp"
        android:layout_height="26dp"
        android:text="Item 2"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginTop="42dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="55dp"
        android:layout_height="26dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="142dp"
        android:text="Item 1"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/lbsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="Lbs"
        android:textOff="Lbs"
        android:textOn="Lbs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.017"
        app:layout_constraintRight_toLeftOf="@+id/qtyButton"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toRightOf="@+id/ozButton"
        android:layout_marginLeft="8dp" />

    <ToggleButton
        android:id="@+id/qtyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:text="Number"
        android:textOff="Qty"
        android:textOn="Qty"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.017" />

    <ToggleButton
        android:id="@+id/ozButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Oz."
        android:textOff="Oz."
        android:textOn="Oz."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.017" />

    <TextView
        android:id="@+id/Final1"
        android:layout_width="62dp"
        android:layout_height="28dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="157dp"
        android:textSize="24sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/Pricetxt1"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="62dp"
        android:layout_height="28dp"
        android:text="Price"
        android:textSize="24sp"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/lbsButton"
        app:layout_constraintRight_toLeftOf="@+id/calcButton"
        android:layout_marginRight="26dp" />

    <TextView
        android:id="@+id/unitTxt1"
        android:layout_width="62dp"
        android:layout_height="28dp"
        android:text="Unit"
        android:textSize="24sp"
        app:layout_constraintRight_toLeftOf="@+id/textView7"
        android:layout_marginRight="36dp"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/ozButton"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <Button
        android:id="@+id/calcButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="80dp"
        android:text="Calc"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
